setUserInfo("í™ê¸¸ë™", "010-1234-5678");

// ì˜ˆì‚° êµ¬ê°„ì— ë”°ë¼ ê°’ ì²˜ë¦¬
let budgetValue;
switch (selectedOptions.budgetRange) {
  case "100~300ë§Œì›":
    budgetValue = "100~300ë§Œì›";
    break;
  case "300~700ë§Œì›":
    budgetValue = "300~700ë§Œì›";
