let selectedOptions = {
  serviceType: "",  // ì›í•˜ëŠ” ì„œë¹„ìŠ¤ ì¢…ë¥˜
  budgetRange: "",  // ì˜ˆì‚° êµ¬ê°„
  industryType: "", // ì—…ì¢…
  keyRequirements: [], // ì£¼ìš” ìš”êµ¬ ì‚¬í•­
